# ===== Ollama設定 =====
OLLAMA_HOST=http://localhost:11434

# ===== API Keys =====
# Web検索（Serper API）
SERPER_API_KEY=your_serper_api_key_here

# OpenAI（オプション：フォールバック用）
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude（オプション）
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===== VectorDB設定 =====
# Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws

# Qdrant（代替）
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=your_qdrant_api_key_here

# ===== Database設定 =====
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=llm_multi_chat
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Neo4j（連想記憶）
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ===== DuckDB設定 =====
DUCKDB_PATH=data/sessions.duckdb

# ===== JWT設定（API用） =====
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ===== レート制限設定 =====
RATE_LIMIT_FREE=100
RATE_LIMIT_PRO=1000

# ===== CORS設定 =====
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ===== ログ設定 =====
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===== モデル設定 =====
DEFAULT_MODEL_FAST=llama3-jp-8b
DEFAULT_MODEL_MEDIUM=amoral-gemma3:latest
DEFAULT_MODEL_SEARCH=dsasai/llama3-elyza-jp-8b:latest

# ===== システム設定 =====
MAX_TURNS=12
MAX_CONVERSATION_DURATION_MINUTES=30
ENABLE_SEARCH=true
ENABLE_EMOTION_MODEL=true
ENABLE_ASSOCIATIVE_MEMORY=true
ENABLE_SELF_REFLECTION=true